    <main>

        <div class="container">

            <div class="gallery">
        <% user.posts.forEach(function(elem){%>
            <div class="gallery-item">
              <img
                alt="gallery-post"
                src="/images/uploads/<%= elem.picture%>"
                alt="post"
                draggable="false"
              />
            </div>

        <% }) %>
                
            <!-- End of gallery -->

            <div class="loader"></div>

        </div>
        <!-- End of container -->

    </main>
</body>

</html>